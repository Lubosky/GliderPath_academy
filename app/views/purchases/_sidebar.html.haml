.checkout-sidebar
  %h4 Order Summary
  .order-summary
    .table-row.table-header
      .title= purchasable.name
    .table-row
      %div #{duration_in_hours(content_length_for(purchasable)).titleize} of Content
      = icon_tag 'check'
    .table-row
      %div Includes Lifetime Access
      = icon_tag 'check'
    .table-row
      %div Self-Paced
      = icon_tag 'check'
    .table-row
      %div Direct Access to the Instructor
      = icon_tag 'check'
    .divider
    - if @purchase.stripe_coupon_id
      .table-row
        %div Coupon Applied
        .sbold= @purchase.stripe_coupon_id
      .divider
    .table-row.table-header
      .title Total Due Today
      = checkout_price(@purchase)
  .order-summary-footer
    %p.text-small.text-muted.uppercase.content-center
      = icon_tag 'lock', class: 'icon-green'
      Secure Server
