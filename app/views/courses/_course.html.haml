- cache course do
  .tile.stacked{ class: "tile-#{course.id}" }
    .tile-header
      = link_to course_path(course) do
        = icon_tag 'course'
        %h1= course.name
        %small
          = t('lessons.count', count: course.lessons.count)
          \/
          = duration_in_hours(course.content_length)
    .tile-content
      .tile-meta
        %small Instructed by
        %h3= course.instructor.name
      %figure
        = user_avatar(course.instructor, class: 'avatar-default', alt: course.instructor.name, width: '45px', height: '45px')
    %p.description= course.short_description
