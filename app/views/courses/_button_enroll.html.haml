- enrollment = current_user.enrollments.build( course_id: resource.id )
= form_for enrollment, url: course_enrollment_path(resource) do |f|
  = f.button t('button.course.enroll'), class: 'button button-purple', data: { disable_with: "#{image_tag 'signal.svg', class: 'loader'} #{t('button.disabled.enrolling')}" }
