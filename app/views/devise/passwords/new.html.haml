.row
  .six.columns.centered.reset-mobile-column
    .box
      .box-header
        %h3.content-center
          = t('devise.passwords.password_request.title')
      .box-content
        %p.margin-top-0
          = t('devise.passwords.password_request.instructions')
        = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
          = f.error_notification
          .row
            = f.input :email, required: true, autofocus: true, wrapper_html: { class: 'twelve columns reset-mobile-column' }
          .row
            .form-item.twelve.columns.reset-mobile-column
              = f.button :button, t('devise.passwords.password_request.button'), class: 'button-green wide', data: { disable_with: "#{image_tag 'signal.svg', class: 'loader'} #{t('button.disabled.processing')}" }
        = render 'devise/shared/links'
