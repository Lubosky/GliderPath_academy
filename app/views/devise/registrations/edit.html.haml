.row
  .eight.columns.centered
    %h2.content-center Edit #{resource_name.to_s.humanize}
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = f.error_notification
      .row
        = f.input :first_name, required: true, autofocus: true, wrapper_html: { class: 'six columns reset-mobile-column' }
        = f.input :last_name, required: true, wrapper_html: { class: 'six columns reset-mobile-column' }
      .row
        = f.input :email, required: true, wrapper_html: { class: 'twelve columns reset-mobile-column' }
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %p
            Currently waiting confirmation for: #{resource.unconfirmed_email}
      .row
        = f.input :password, autocomplete: 'off', required: false, wrapper_html: { class: 'six columns reset-mobile-column' }
        = f.input :password_confirmation, required: false, wrapper_html: { class: 'six columns reset-mobile-column' }
      .row
        = f.input :current_password, required: true, wrapper_html: { class: 'twelve columns reset-mobile-column' }
      %hr
      .row
        .form-item.twelve.columns.reset-mobile-column
          = f.button :submit, t('button.account.update'), class: 'button-green wide', data: { 'disable-with': 'Saving...' }
    %p
      = link_to t('subscriptions.cancel.button'), cancel_subscription_path, method: :delete, class: 'button button-red', data: { confirm: t('subscriptions.cancel.confirm') } if current_user.subscribed?
