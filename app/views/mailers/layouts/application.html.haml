%html
  %head
    %link{ href: '/assets/mailer.css', media: 'screen', rel: 'stylesheet', type: 'text/css' }
  %body
    .mailer
      %table{ align: 'center', border: '0', cellpadding: '0', cellspacing: '0' }
        %tbody
          %tr
            %td
              %table.header{ width: '100%' }
                %tbody
                  %tr
                    %td{ padding: '20px 15px', valign: 'bottom' }
                      %div
                        = render 'layouts/mailer_logo'
          %tr
            %td
              %table.content{ border: '0', cellpadding: '30', cellspacing: '0' }
                %tbody
                  %tr
                    %td
                      %div
                        = emojify yield, file_ext: 'png'
          %tr
            %td
              %table.footer{ border: '0', cellpadding: '0', cellspacing: '0', width: '100%' }
                %tbody
                  %tr
                    %td
                      %div
                        = render 'layouts/mailer_footer'
