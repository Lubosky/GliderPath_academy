.tile.extended.stacked{ class: "tile-#{course.id}" }
  .tile-header
    = link_to course_path(course) do
      = progress_for(course, current_user)
      %h1= course.name
      %small
        = t('lessons.count', count: lesson_count_for(course))
        \/
        = duration_in_hours(content_length_for(course))
  .tile-content
    .tile-meta
      %small Instructed by
      %h3= course.instructor.name
    %figure
      = user_avatar(course.instructor, src: course.instructor.avatar_url(:medium), class: 'avatar-default', alt: course.instructor.name, width: '45px', height: '45px')
  %p.ellipsis= course.short_description
  .tile-footer
    = render 'courses/button_enroll', resource: course
