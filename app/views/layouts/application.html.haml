!!!
%html
  %head
    = csrf_meta_tags
    = render 'meta'

    %title= [(content_for(:page_title) || title), t('titles.application')].compact.uniq.join(' | ')

    = include_gon
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'https://js.braintreegateway.com/v2/braintree.js', 'data-turbolinks-track' => true

  %body{ class: "#{body_css}" }
    = render 'flash_messages'
    = render 'navigation'
    = render 'container'
    = render 'footer'
